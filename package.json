{
	"name": "verctl",
	"version": "1.9.0",
	"description": "A CLI tool to manage package versioning",
	"bin": {
		"verctl": "dist/main.js"
	},
	"scripts": {
		"build": "tsc",
		"build-test": "yarn build && vitest run",
		"start": "ts-node src/main.ts",
		"test": "vitest run",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"git:hooks": "chmod +x .githooks/* && git config core.hooksPath .githooks"
	},
	"dependencies": {
		"editorconfig": "0.15.3",
		"fs-extra": "^11.3.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "14",
		"@typescript-eslint/eslint-plugin": "4.33.0",
		"@typescript-eslint/parser": "4.33.0",
		"eslint": "7.32.0",
		"execa": "5.1.1",
		"globals": "13.18.0",
		"ts-node": "^10.9.2",
		"typescript": "4.4.3",
		"vitest": "0.11.0"
	},
	"type": "commonjs",
	"keywords": [
		"version",
		"semver",
		"cli",
		"git",
		"release"
	],
	"license": "MIT",
	"packageManager": "yarn@1.8.1"
}
